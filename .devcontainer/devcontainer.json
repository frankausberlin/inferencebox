{
  "name": "inferencebox",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "datascience-env",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "shutdownAction": "stopCompose",
  "extensions": [
    "ms-python.python",
    "ms-python.black-formatter",
    "ms-python.isort",
    "ms-toolsai.jupyter",
    "ms-toolsai.jupyter-keymap",
    "ms-toolsai.jupyter-renderers",
    "ms-toolsai.vscode-jupyter-powertoys",
    "ms-vscode.vscode-json",
    "ms-vscode.vscode-yaml",
    "redhat.vscode-yaml",
    "esbenp.prettier-vscode",
    "ms-vscode.vscode-typescript-next",
    "github.copilot",
    "github.copilot-chat"
  ],
  "settings": {
    "python.defaultInterpreterPath": "/opt/conda/envs/ds12/bin/python",
    "python.terminal.activateEnvironment": true,
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "jupyter.jupyterServerType": "local",
    "terminal.integrated.shell.linux": "/bin/bash",
    "files.associations": {
      "*.ipynb": "jupyter-notebook"
    },
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "forwardPorts": [
    8888,
    11435,
    3000
  ],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "11435": {
      "label": "Ollama Server",
      "onAutoForward": "silent"
    },
    "3000": {
      "label": "Open WebUI",
      "onAutoForward": "notify"
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
    "source=workspace,target=/home/jupyter/work,type=volume",
    "source=datasets,target=/home/jupyter/datasets,type=volume",
    "source=cache,target=/home/jupyter/.cache,type=volume"
  ],
  "containerEnv": {
    "JUPYTER_TOKEN": "${localEnv:JUPYTER_TOKEN}",
    "JUPYTER_PASSWORD": "${localEnv:JUPYTER_PASSWORD}"
  },
  "postCreateCommand": "micromamba run -n ds12 pip install -e .",
  "postStartCommand": "micromamba run -n ds12 jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root --notebook-dir=/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "jupyter"
}